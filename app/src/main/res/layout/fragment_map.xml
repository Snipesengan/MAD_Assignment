<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mapRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="#87ceeb80">

        <ImageView
            android:id="@+id/timerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_timer_black_24dp"
            app:layout_constraintBottom_toTopOf="@id/moneyIcon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="00:00:00"
            android:textColor="#000000"
            android:textStyle="normal"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="@id/timerIcon"
            app:layout_constraintLeft_toRightOf="@id/timerIcon"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/moneyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_attach_money_black_24dp"
            app:layout_constraintBottom_toTopOf="@id/incomeIcon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timerIcon" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="$5000"
            android:textColor="#000000"
            android:textStyle="normal"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="@+id/moneyIcon"
            app:layout_constraintLeft_toRightOf="@+id/moneyIcon"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/incomeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_account_balance_black_24dp"
            app:layout_constraintBottom_toTopOf="@id/populationIcon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/moneyIcon" />

        <TextView
            android:id="@+id/income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text=" + $500"
            android:textColor="#000000"
            android:textStyle="normal"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="@+id/incomeIcon"
            app:layout_constraintLeft_toRightOf="@+id/incomeIcon"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/populationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_group_black_24dp"
            app:layout_constraintBottom_toTopOf="@id/employmentIcon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/incomeIcon" />

        <TextView
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="100"
            android:textColor="#000000"
            android:textStyle="normal"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="@+id/populationIcon"
            app:layout_constraintLeft_toRightOf="@+id/populationIcon"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/employmentIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/ic_work_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/populationIcon" />

        <TextView
            android:id="@+id/employment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="97%"
            android:textColor="#000000"
            android:textStyle="normal"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="@+id/employmentIcon"
            app:layout_constraintLeft_toRightOf="@+id/employmentIcon"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
                                                    

</androidx.constraintlayout.widget.ConstraintLayout>